<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.yourstory.winsproject.fragment.LoginFragment">

    <View
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:background="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@id/ev_login_id"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/toolbarMargin"
        android:layout_marginBottom="20dp"
        />
    <EditText
        android:id="@+id/ev_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/ev_login_psw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/toolbarMargin"
        android:layout_marginEnd="@dimen/toolbarMargin"
        android:layout_marginBottom="@dimen/viewMargin"
        android:paddingStart="@dimen/viewMargin"
        android:paddingEnd="@dimen/viewMargin"
        android:hint="账号："
        />
    <EditText
        android:id="@+id/ev_login_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btn_login_login"
        android:layout_marginStart="@dimen/toolbarMargin"
        android:layout_marginEnd="@dimen/toolbarMargin"
        android:layout_marginBottom="@dimen/viewMargin"
        android:paddingStart="@dimen/viewMargin"
        android:paddingEnd="@dimen/viewMargin"
        android:hint="密码："
        />
    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="登录"
        android:textSize="@dimen/titleNumber"
        android:layout_marginStart="@dimen/toolbarMargin"
        android:layout_marginEnd="@dimen/toolbarMargin"/>
    <TextView
        android:id="@+id/tv_login_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_login_login"
        android:text="忘记密码？"
        android:layout_marginStart="@dimen/toolbarMargin"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/viewMargin"
        android:clickable="true"/>
    <TextView
        android:id="@+id/tv_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_login_login"
        android:text="注册新用户"
        android:layout_marginEnd="@dimen/toolbarMargin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/viewMargin"
        android:clickable="true"/>

</android.support.constraint.ConstraintLayout>
