<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_order"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    app:contentPadding="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考研"
            android:textSize="@dimen/titleNumber"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_card_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已评价"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_card_type" />
        <TextView
            android:id="@+id/tv_toEvaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去评价"
            android:textSize="16sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_card_type"
            android:clickable="true"
            />

        <View
            android:id="@+id/card_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/BLACK"
            app:layout_constraintTop_toBottomOf="@id/tv_card_type" />

        <ImageView
            android:id="@+id/iv_card_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/touxiang"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_line" />

        <TextView
            android:id="@+id/tv_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="李浩男 >"
            android:textSize="@dimen/titleNumber"
            app:layout_constraintLeft_toRightOf="@id/iv_card_head"
            app:layout_constraintTop_toBottomOf="@id/card_line" />

        <TextView
            android:id="@+id/tv_card_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="内容:"
            app:layout_constraintLeft_toRightOf="@id/iv_card_head"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_card_title" />

        <TextView
            android:id="@+id/tv_card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="时间:2018.06.02"
            app:layout_constraintLeft_toRightOf="@id/iv_card_head"
            app:layout_constraintTop_toBottomOf="@id/tv_card_content" />

        <TextView
            android:id="@+id/tv_card_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="费用:20"
            app:layout_constraintLeft_toRightOf="@id/iv_card_head"
            app:layout_constraintTop_toBottomOf="@id/tv_card_time" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>