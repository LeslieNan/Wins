<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/itemImgWidth"
        android:layout_height="@dimen/itemImgHeight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/listimg1"
        android:gravity="center"/>


    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_head"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="李浩男"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_introduce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        app:layout_constraintLeft_toRightOf="@id/iv_head"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="曾经跨过山和大海，也穿过人山人海"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_introduce"
        app:layout_constraintLeft_toRightOf="@id/iv_head"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="¥30"
        android:textSize="18sp"
        android:textColor="@color/RED"
        android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>